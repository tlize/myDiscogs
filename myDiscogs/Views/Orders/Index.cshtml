@model myDiscogs.Models.Orders.PaginatedOrders

@{
    ViewBag.Title = "Index";
    var totalPages = Model.Pagination.Pages;
    var currentPage = Model.Pagination.Page;
}

<h2>@Model.Pagination.Items orders so far</h2>
@if (totalPages > 1)
{
    <p>page @Model.Pagination.Page of @Model.Pagination.Pages</p>
}

<table class="table">
    <tr>
        <th>
            Order #
        </th>
        <th>
            Date
        </th>
        <th>
            Buyer
        </th>
        <th>
            Shipping Address
        </th>
        <th>
            Items
        </th>
        <th>
            Total
        </th>
        @*<th></th>*@
    </tr>

    @foreach (var item in Model.Orders)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created).ToString().Substring(0, 10)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Buyer.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShippingAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Items.Count)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total.Value)€
            </td>
            @*<td>
                @Html.ActionLink("Details", "Details", new { id = item.Id })
            </td>*@
        </tr>
    }

</table>

<ul class="pagination">
    @if (totalPages > 1)
    {
        if (currentPage > 1)
        {
            <li class="page-item">
                <a class="page-link" href="@Url.Action("Index", new { page = currentPage - 1 })">Previous  </a>
            </li>
        }

        for (int i = 1; i <= totalPages; i++)
        {
            <li class="page-item">
                <a class="page-link" href="@Url.Action("Index", new { page = i })">@i     </a>
            </li>
        }

        if (currentPage < totalPages)
        {
            <li class="page-item">
                <a class="page-link" href="@Url.Action("Index", new { page = currentPage + 1 })">Next</a>
            </li>
        }
    }
</ul>
